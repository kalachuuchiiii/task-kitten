{
  "compilerOptions": {
    /* Environment */
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "types": ["node"],
   
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    /* Output */
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    /* Type checking */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    /* Performance */
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
